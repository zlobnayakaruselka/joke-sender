{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/root.json",
  "type": "object",
  "title": "Random Chuck Norris joke",
  "required": [
    "type",
    "value"
  ],
  "properties": {
    "type": {
      "type": "string",
      "enum": ["success"]
    },
    "value": {
      "type": "object",
      "required": [
        "id",
        "joke",
        "categories"
      ],
      "properties": {
        "id": {
          "type": "integer",
          "minimum": 1
        },
        "joke": {
          "type": "string",
          "minLength": 1
        },
        "categories": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    }
  }
}